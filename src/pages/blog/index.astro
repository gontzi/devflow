---
import Layout from "../../layouts/Layout.astro";
import BlogList from "../../components/BlogList";
import { getCollection } from "astro:content";

const allPosts = await getCollection("blog");
---

<Layout title="archivo — refuge">
  <div class="space-y-12 mb-24">
    <div class="space-y-4">
      <p
        class="text-xs uppercase tracking-[0.3em] text-refuge-muted font-medium"
      >
        colección de pensamientos
      </p>
      <h1
        class="text-5xl md:text-7xl font-serif text-refuge-dark tracking-tighter"
      >
        Archivo
      </h1>
      <p
        class="text-xl text-refuge-text font-light italic serif opacity-80 border-l border-refuge-accent/20 pl-6 max-w-lg"
      >
        Una recopilación de todas las exploraciones y reflexiones compartidas en
        este espacio.
      </p>
    </div>
  </div>

  <BlogList client:load initialPosts={allPosts} />
</Layout>
