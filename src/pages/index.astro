---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { filterPublishedPosts } from "../utils/filterPosts";
import { calculateReadingTime } from "../utils/readingTime";

const allPosts = await getCollection("blog");
const publishedPosts = filterPublishedPosts(allPosts);
const sortedPosts = publishedPosts
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 3);
---

<Layout title="refuge — santuario digital">
  <!-- Hero Section -->
  <section class="mb-32">
    <div class="space-y-12">
      <div class="space-y-4">
        <p
          class="text-sm uppercase tracking-[0.3em] text-refuge-muted font-medium"
        >
          santuario digital
        </p>
        <h1
          class="text-6xl md:text-8xl font-serif text-refuge-dark leading-[0.9] tracking-tighter"
        >
          Un espacio para<br />la <span class="italic text-refuge-accent/70"
            >calma</span
          > digital.
        </h1>
      </div>

      <p
        class="text-xl md:text-2xl text-refuge-text font-light max-w-xl leading-relaxed"
      >
        Exploraciones sobre diseño lento, desarrollo consciente y la belleza de
        lo esencial. Un refugio ante la sobreestimulación.
      </p>

      <div class="pt-8">
        <a
          href="#featured"
          class="refuge-tag px-8 py-3 bg-refuge-dark text-refuge-bg hover:bg-refuge-accent transition-all inline-block lowercase tracking-normal text-sm"
        >
          explorar archivos
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Posts Section -->
  <section id="featured" class="py-32 border-t border-refuge-surface">
    <div class="space-y-24">
      <div class="flex flex-col md:flex-row md:items-end justify-between gap-8">
        <div class="space-y-4">
          <h2 class="text-4xl md:text-5xl font-serif text-refuge-dark">
            Escritos recientes
          </h2>
          <p class="text-refuge-muted font-light text-lg italic serif">
            Pensamientos pausados sobre tecnología.
          </p>
        </div>
        <a
          href="/blog"
          class="text-sm uppercase tracking-widest text-refuge-muted hover:text-refuge-dark transition-colors border-b border-refuge-accent/30 pb-1"
          >ver todo el archivo</a
        >
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-16 lg:gap-24">
        {
          sortedPosts.map((post, index) => (
            <article
              class={`group space-y-6 ${index === 0 ? "md:col-span-2 max-w-4xl" : ""}`}
            >
              <a href={`/blog/${post.slug}`} class="block space-y-8">
                <div class="flex items-center gap-4 text-xs font-medium tracking-widest uppercase text-refuge-muted">
                  <span>{post.data.category}</span>
                  <span class="w-8 h-px bg-refuge-accent/30" />
                  <time datetime={post.data.publishDate.toISOString()}>
                    {new Date(post.data.publishDate).toLocaleDateString(
                      "es-ES",
                      {
                        month: "short",
                        day: "numeric",
                      },
                    )}
                  </time>
                </div>

                <div class="space-y-4">
                  <h3
                    class={`font-serif text-refuge-dark group-hover:text-refuge-accent transition-colors leading-[1.1] ${index === 0 ? "text-4xl md:text-6xl" : "text-3xl md:text-4xl"}`}
                  >
                    {post.data.title}
                  </h3>
                  <p class="text-lg text-refuge-text font-light leading-relaxed line-clamp-2 italic serif opacity-80">
                    {post.data.description}
                  </p>
                </div>

                <div class="pt-2">
                  <span class="text-xs uppercase tracking-[0.2em] text-refuge-muted border-b border-transparent group-hover:border-refuge-accent pb-1 transition-all">
                    leer reflexión
                  </span>
                </div>
              </a>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="py-32 border-t border-refuge-surface">
    <div class="refuge-card max-w-2xl mx-auto text-center space-y-12 py-16">
      <div class="space-y-4">
        <h2 class="text-3xl md:text-4xl font-serif text-refuge-dark italic">
          Correspondencia
        </h2>
        <p class="text-refuge-text font-light max-w-md mx-auto leading-relaxed">
          Recibe una notificación silenciosa cuando algo nuevo sea habitado en
          este refugio. Sin ruido, solo esencia.
        </p>
      </div>

      <form class="space-y-6 max-w-sm mx-auto">
        <div class="relative">
          <input
            type="email"
            placeholder="tu dirección de correo"
            class="w-full bg-transparent border-b border-refuge-accent/30 py-3 focus:outline-none focus:border-refuge-accent transition-all text-center font-light placeholder:text-refuge-muted/50"
            required
          />
        </div>
        <button
          type="submit"
          class="w-full refuge-tag py-3 bg-refuge-bg border border-refuge-accent/20 text-refuge-text hover:bg-refuge-accent hover:text-refuge-bg transition-all lowercase tracking-normal"
        >
          unirse a la calma
        </button>
      </form>

      <p
        class="text-[10px] uppercase tracking-widest text-refuge-muted opacity-50"
      >
        Privacidad respetada. Silencio garantizado.
      </p>
    </div>
  </section>
</Layout>
