---
import SearchModal from "./SearchModal";
import ThemeToggle from "./ThemeToggle";
---

<header
  class="fixed top-0 left-0 right-0 z-50 pointer-events-none pt-6 md:pt-8 px-6 md:px-12 lg:px-24"
>
  <div class="relative max-w-screen-xl mx-auto pointer-events-auto">
    <div
      class="absolute inset-0 bg-refuge-bg/70 backdrop-blur-xl border border-refuge-surface/50 rounded-full shadow-sm"
    >
    </div>
    <div class="relative flex justify-between items-center h-16 md:h-20 px-8">
      <a
        href="/"
        class="text-xl md:text-2xl font-serif text-refuge-dark tracking-tighter hover:opacity-70 transition-opacity"
      >
        refuge<span class="text-refuge-accent">.</span>
      </a>

      <nav class="flex items-center gap-6 md:gap-8">
        <!-- Artículos -->
        <a
          href="/blog"
          class="group flex flex-col items-center gap-1.5"
          title="Artículos"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="0.75"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-refuge-muted group-hover:text-refuge-dark transition-colors"
            ><rect width="18" height="18" x="3" y="3" rx="2"></rect><path
              d="M3 9h18"></path><path d="M9 21V9"></path></svg
          >
          <span
            class="text-[9px] uppercase tracking-widest text-refuge-muted opacity-0 group-hover:opacity-100 transition-opacity hidden md:block"
            >artículos</span
          >
        </a>

        <!-- Etiquetas -->
        <a
          href="/tags"
          class="group flex flex-col items-center gap-1.5"
          title="Etiquetas"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="0.75"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-refuge-muted group-hover:text-refuge-dark transition-colors"
            ><path
              d="M12 2H2v10l9.29 9.29c.94.94 2.48.94 3.42 0l6.58-6.58c.94-.94.94-2.48 0-3.42L12 2Z"
            ></path><path d="M7 7h.01"></path></svg
          >
          <span
            class="text-[9px] uppercase tracking-widest text-refuge-muted opacity-0 group-hover:opacity-100 transition-opacity hidden md:block"
            >etiquetas</span
          >
        </a>

        <!-- Currículum -->
        <a
          href="https://lalo.lol/in"
          target="_blank"
          class="group flex flex-col items-center gap-1.5"
          title="Currículum"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="0.75"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-refuge-muted group-hover:text-refuge-dark transition-colors"
            ><path d="M16 20V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path><rect
              width="20"
              height="14"
              x="2"
              y="6"
              rx="2"></rect></svg
          >
          <span
            class="text-[9px] uppercase tracking-widest text-refuge-muted opacity-0 group-hover:opacity-100 transition-opacity hidden md:block"
            >currículum</span
          >
        </a>
      </nav>
    </div>
  </div>

  <div class="h-24 lg:h-32"></div>
</header>
